{
  "root": true,
  "extends": "airbnb",
  "ignorePatterns": [
    "**/*.test.js"
  ],
  "rules": {
    "no-console": "off",
    "no-alert": "off",
    "prefer-arrow-callback": "off",
    "func-names": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/prefer-stateless-function": 0,
    "arrow-parens": [2, "always"],
    "jsx-a11y/label-has-associated-control": 0,
    "max-params": [
      "error",
      1
  ]
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  }
}
